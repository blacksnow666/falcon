<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="com.twistlet.falcon.model.service" />

	<bean id="charsetAscii" class="java.nio.charset.Charset"
		factory-method="forName">
		<constructor-arg>
			<value>US-ASCII</value>
		</constructor-arg>
	</bean>

	<bean id="notificationWelcomeService"
		class="com.twistlet.falcon.model.service.NotificationServiceImpl">
		<constructor-arg index="0">
			<bean class="org.springframework.mail.SimpleMailMessage">
				<property name="from"
					value="Butter-Bun Sign-Up &lt;signup@butter-bun.com&gt;" />
				<property name="subject">
					<value>Welcome to Butter-Bun</value>
				</property>
			</bean>
		</constructor-arg>
		<constructor-arg index="1">
			<bean class="org.springframework.mail.javamail.JavaMailSenderImpl">
				<property name="host">
					<value>mail.apris-solutions.com</value>
				</property>
				<property name="port">
					<value>587</value>
				</property>
				<property name="username">
					<value>signup@butter-bun.com</value>
				</property>
				<property name="password">
					<value>butter2012</value>
				</property>
				<property name="javaMailProperties">
					<props>
						<prop key="mail.smtp.auth">true</prop>
						<prop key="mail.smtp.starttls.enable">false</prop>
					</props>
				</property>
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="org.apache.commons.io.FileUtils" factory-method="readFileToString">
				<constructor-arg index="0"
					value="classpath:com/twistlet/falcon/mail/welcome.txt" />
				<constructor-arg index="1">
					<ref local="charsetAscii" />
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

	<bean id="notificationRemovalService"
		class="com.twistlet.falcon.model.service.NotificationServiceImpl">
		<constructor-arg index="0">
			<bean class="org.springframework.mail.SimpleMailMessage">
				<property name="from"
					value="Butter-Bun Notification &lt;notifications@butter-bun.com&gt;">
				</property>
				<property name="subject">
					<value>Butter-Bun - Your appointment has been cancelled</value>
				</property>
			</bean>
		</constructor-arg>
		<constructor-arg index="1">
			<bean class="org.springframework.mail.javamail.JavaMailSenderImpl">
				<property name="host">
					<value>${smtp.notifications.host}</value>
				</property>
				<property name="port">
					<value>${smtp.notifications.port}</value>
				</property>
				<property name="username">
					<value>${smtp.notifications.username}</value>
				</property>
				<property name="password">
					<value>${smtp.notifications.password}</value>
				</property>
				<property name="javaMailProperties">
					<props>
						<prop key="mail.smtp.auth">true</prop>
						<prop key="mail.smtp.starttls.enable">false</prop>
					</props>
				</property>
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="org.apache.commons.io.FileUtils" factory-method="readFileToString">
				<constructor-arg index="0"
					value="classpath:com/twistlet/falcon/mail/remove.txt" />
				<constructor-arg index="1">
					<ref local="charsetAscii" />
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

</beans>
